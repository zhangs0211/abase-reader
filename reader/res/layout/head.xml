<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        style="@style/wm_hw"
        android:background="@drawable/bookshelf_header_bg" >

        <ImageView
            android:id="@+id/iv_head_left"
            style="@style/w"
            android:layout_alignParentLeft="true"
            android:paddingTop="12dp"
            android:src="@drawable/bookshelf_sidebar_icon" />

        <ImageView
            android:id="@+id/iv_head_right"
            style="@style/w"
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:paddingRight="5dp"
            android:paddingTop="12dp"
            android:src="@drawable/bookstore_icon" />

        <LinearLayout
            style="@style/ll_w_h"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:layout_toRightOf="@+id/iv_head_left" >

            <View
                android:layout_width="0.3dp"
                android:layout_height="25dp"
                android:background="#33313131" />

            <View
                android:layout_width="0.3dp"
                android:layout_height="25dp"
                android:background="#33ffffff" />
        </LinearLayout>

        <LinearLayout
            style="@style/ll_w_h"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@+id/iv_head_right" >

            <View
                android:layout_width="0.3dp"
                android:layout_height="25dp"
                android:background="#33313131" />

            <View
                android:layout_width="0.3dp"
                android:layout_height="25dp"
                android:background="#33ffffff" />
        </LinearLayout>

        <LinearLayout
         
            style="@style/ll_w_h"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true" >

            <TextView
               
                android:id="@+id/tv_head_logo"
                style="@style/w"
                android:layout_marginRight="22dp"
                android:background="@drawable/bookshelf_header_logo"
                android:gravity="center"
                android:textColor="#ff6B2F0D"
                android:textSize="25sp" />
        </LinearLayout>
        
        
          <LinearLayout
              
            style="@style/ll_w_h"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true" >
            <TextView
                  android:visibility="gone"
                android:text="title"
                android:id="@+id/tv_head"
                style="@style/w"
                android:layout_marginRight="15dp"
                android:gravity="center"
                android:textColor="#ff6B2F0D"
                android:textSize="22sp" />
        </LinearLayout>
        
        
        
    </RelativeLayout>

</merge>